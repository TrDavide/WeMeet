<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/arrowBackSetting"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:contentDescription="@string/login"
        app:icon="@drawable/arrow_left"
        app:iconSize="24dp"
        app:iconTint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/profileImageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="80dp"
        android:layout_gravity="center"
        app:cardElevation="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/profile_default"
            android:contentDescription="@string/username"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/username"
        android:textSize="18sp"
        android:textColor="#A0A0A0"
        android:fontFamily="@font/open_sans_medium"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/frase_bio"
        android:textSize="16sp"
        android:fontFamily="@font/open_sans"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/elimina_preferiti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="@string/elimina_preferiti"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginTop="30dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/delete_save"
        app:iconTint="@android:color/white"
        android:backgroundTint="@android:color/background_dark"
        android:strokeColor="@android:color/white"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottone_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="@string/esciAccount"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans_bold"
        android:layout_marginTop="32dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/esci"
        app:iconTint="@android:color/white"
        android:backgroundTint="#B33A3A"/>








</LinearLayout>