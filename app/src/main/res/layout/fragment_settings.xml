<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Profilo con cerchio colorato dietro -->
        <View
            android:id="@+id/profileCircleBg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/circle_gradient_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/profileImageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="12dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/profile_default"
                android:contentDescription="@string/username"/>
        </androidx.cardview.widget.CardView>

        <!-- Username -->
        <TextView
            android:id="@+id/textprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textSize="32sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/profileImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Username sotto -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textSize="18sp"
            android:textColor="#A0A0A0"
            android:fontFamily="@font/open_sans_medium"
            app:layout_constraintTop_toBottomOf="@id/textprofile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Bio -->
        <TextView
            android:id="@+id/bio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/frase_bio"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Bottone Modifica Profilo con gradient -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/modifica_profilo"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/modifica_profilo"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="40dp"
            app:cornerRadius="28dp"
            app:icon="@drawable/pencil"
            app:iconTint="@android:color/white"
            android:backgroundTint="@android:color/background_dark"
            app:layout_constraintTop_toBottomOf="@id/bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Bottone Elimina Preferiti con bordo -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/elimina_preferiti"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/elimina_preferiti"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="16dp"
            app:cornerRadius="28dp"
            app:icon="@drawable/delete_save"
            app:iconTint="@android:color/white"
            android:backgroundTint="@android:color/background_dark"
            android:strokeColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/modifica_profilo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Bottone Logout -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottone_logout"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/esciAccount"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginTop="32dp"
            app:cornerRadius="28dp"
            app:icon="@drawable/esci"
            app:iconTint="@android:color/white"
            android:backgroundTint="#B33A3A"
            app:layout_constraintTop_toBottomOf="@id/elimina_preferiti"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Back button piccolo in alto a sinistra -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/arrowBackWelcome"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:contentDescription="@string/login"
            app:icon="@drawable/baseline_arrow_back_24"
            app:iconSize="35dp"
            app:iconTint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>