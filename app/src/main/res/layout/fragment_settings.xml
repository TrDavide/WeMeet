<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_red"
    tools:context=".settings">

    <Button
        style="?attr/materialIconButtonStyle"
        android:id="@+id/arrowBackWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="@dimen/margin_default"
        app:iconTint="@color/md_theme_scrim"
        app:iconSize="35dp"
        android:contentDescription="@string/login"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border2"
        android:layout_marginTop="50sp"
        android:layout_below="@+id/arrowBackWelcome"
        android:backgroundTint="@color/white"/>

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_shape"
        android:contentDescription="Profile Image"
        android:scaleType="centerCrop"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/baseline_account_circle_24"/>

    <TextView
        android:id="@+id/clickableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modificaImmagineProfilo"
        android:textColor="@android:color/holo_blue_light"
        android:clickable="true"
        android:textSize="20sp"
        android:layout_below="@id/profileImageView"
        android:layout_centerHorizontal="true"
        android:focusable="true"/>
    <View
        android:id="@+id/spazio"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_below="@id/clickableText"/>
    <Button
        android:id="@+id/filledButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="32sp"
        android:backgroundTint="@color/main_red"
        android:layout_below="@id/spazio"
        />
    <Button
        android:id="@+id/biobutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="32sp"
        android:backgroundTint="@color/main_red"
        android:layout_below="@id/filledButton"
        />


</RelativeLayout>