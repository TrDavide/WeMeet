<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/margin_default"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/impostazioni"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:gravity="center"
        android:text="Sei loggato con:\nemail@example.com"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans_bold" />




    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottone_tema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="@string/tema_giorno"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans_bold"
        android:layout_marginTop="100dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/moon"
        app:iconTint="@color/white"
        android:backgroundTint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottone_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="@string/esciAccount"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans_bold"
        android:layout_marginTop="32dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/esci"
        app:iconTint="@android:color/white"
        android:backgroundTint="@color/red_button_esci"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottone_elimina_profilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="150dp"
        android:text="@string/elimina_profilo"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans_bold"
        app:cornerRadius="28dp"
        app:icon="@drawable/delete_user"
        app:iconTint="@android:color/white"
        android:backgroundTint="@color/red_button_esci" />
</LinearLayout>