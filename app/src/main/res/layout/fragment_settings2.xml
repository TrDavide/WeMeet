<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_red">

    <Button
        style="?attr/materialIconButtonStyle"
        android:id="@+id/arrowBackWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/arrow_left"
        android:layout_marginTop="@dimen/margin_default"
        app:iconTint="@color/white"
        app:iconSize="30dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border2"
        android:layout_marginTop="50sp"
        android:layout_below="@+id/arrowBackWelcome"
        android:backgroundTint="@color/white"/>

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_shape"
        android:contentDescription="Profile Image"
        android:scaleType="centerCrop"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/profile_default"/>

    <View
        android:id="@+id/spazio"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_below="@id/profileImageView"/>

    <TextView
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spazio"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/modifica_nome"
        android:textColor="@color/md_theme_scrim"
        android:textSize="16sp" />

    <View
        android:id="@+id/spazio2"
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        android:layout_below="@id/inputName"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/spazio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:id="@+id/textInputEmail2"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEmail3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/inputBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputEmail2"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/modifica_bio"
        android:textColor="@color/md_theme_scrim"
        android:textSize="16sp" />

    <View
        android:id="@+id/spazio3"
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        android:layout_below="@id/inputBio"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/spazio3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:id="@+id/textInputEmail4"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEmail5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Bottone Salva Modifiche -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSalvaModifiche"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:elevation="4dp"
        android:fontFamily="@font/open_sans_bold"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="@string/salva_modifiche"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#E53935" />

</RelativeLayout>
