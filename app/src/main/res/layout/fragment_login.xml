<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E45440"

    android:orientation="vertical"
    tools:context=".ui.welcome.LoginActivity"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/login"
        android:textColor="@color/md_theme_onSecondary"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/FraseSottoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/frase_login"
        android:textColor="@color/md_theme_onSecondary"
        android:textSize="25sp" />

    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/FraseSottoLogin"
        android:background="@drawable/border2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/email"
        android:textColor="@color/md_theme_scrim"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="420dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/password"
        android:textColor="@color/md_theme_scrim"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        style="?attr/textInputOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="20dp"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/textButton"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/open_sans_medium"
        android:text="@string/forgot_password" />

    <Button
        android:id="@+id/loginButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/md_theme_scrim"
        android:fontFamily="@font/open_sans_bold"
        android:padding="15dp"
        android:text="@string/accedi"
        android:textColor="@color/md_theme_onSecondaryFixed_mediumContrast"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="650dp">

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginEnd="1dp"
            android:layout_toStartOf="@+id/text_or"
            android:layout_centerInParent="true"
            android:background="#555"/>

        <TextView
            android:id="@+id/text_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:layout_centerInParent="true"/>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_toEndOf="@+id/text_or"
            android:layout_centerInParent="true"
            android:background="#555"/>
    </RelativeLayout>

    <Button
        android:layout_width="364dp"
        android:layout_height="63dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="700dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/md_theme_bianchino"
        android:padding="15dp"
        android:text="@string/or_withGoogle"
        android:textColor="@color/md_theme_scrim"
        app:icon="@drawable/googleicon"
        app:iconGravity="textStart"
        app:iconTint="@null" />
</RelativeLayout>